%table
  %tr
    %th
      = t 'home.discussion_forum'
  - @topics.each do |topic|
    - last_post = topic.posts.reverse.first
    - this_class = cycle("odd", "even")
    %tr{ :class => "#{this_class}" }
      %td
        = topic_link topic
        %br/
        %span.quiet.small
          = t('home.last_post_ago_by', :ago => time_ago_in_words(last_post.created_at), :person => person_link last_post.person)
.more
  = link_to t('home.go_to_discussion_forum'), forum_path(topic.forum)
