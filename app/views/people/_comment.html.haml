%li
  .profile-image
    = image_link(comment.commenter, :image => :thumbnail)
  %p.meta.published
    = t('person.said', :person => person_link(comment.commenter))
    = t('global.ago', :time_ago => time_ago_in_words(comment.created_at))
    - if (current_person?(comment.commentable) or current_person?(comment.commenter))
      = link_to image_tag("icons/comment_delete.png", :class => 'actioner'),  person_comment_path(@person, comment), :method => :delete, :confirm => t('comment.delete_wall_comment_confirmation'), :title => t('comment.delete_wall_comment')
  = display comment.body
  .clear
