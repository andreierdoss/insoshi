- column_div :type => :primary do
  %h2
    = t 'gallery.edit_gallery'
  - form_for(@gallery) do |f|
    .form_row
      = f.label :title
      = f.text_field :title
    .form_row
      = f.label :description
      %p
        = formatting_note
      = f.text_area :description, :rows => 5
    .form_row
      = f.submit t('global.update'), :class => 'button'
      = link_to t('global.cancel'), @gallery, :class => "button"
