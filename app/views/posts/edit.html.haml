%h1
  = t 'post.edit_post'
= error_messages_for :post
- form_for :post, :url => blog_post_path(@blog, @post), :html => { :method => :put } do |f|
  %p
    %b
      = t 'post.blog'
    %br/
    = f.text_field :blog_id
  %p
    %b
      = t 'post.topic'
    %br/
    = f.text_field :topic_id
  %p
    %b
      = t 'post.person'
    %br/
    = f.text_field :person_id
  %p
    %b
      = t 'post.body'
    %br/
    = f.text_area :body
  %p
    = f.submit t('global.update')
