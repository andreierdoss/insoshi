- if message.sender == current_person
  - other_person = message.recipient
  %h2
    = t('message.sent_to')
    = name_link other_person
- else
  - other_person = message.sender
  %h2
    = t('message.sent_by')
    = name_link other_person
%div
  = name_link message.sender
.status-mail
  = email_link other_person, :replying_to => message
