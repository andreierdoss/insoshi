%h1
  = t 'message.editing_message'
= error_messages_for :message
- form_for(:message, :url => edit_person_message_url(current_person, @message)) do |f|
  %p
    %b
      = t 'message.content'
    %br/
    %p
      = formatting_note
    = fckeditor_textarea("message", :content, :toolbarSet => 'InsoshiBase',  :width => '100%', :height => RICH_TEXT_HEIGHT)
    = set_focus_to 'message_body '
  %p
    = f.submit t('global.update')
