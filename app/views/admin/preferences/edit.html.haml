- column_div :type => :primary do
  %h2 Edit Global Preferences
  = error_messages_for :preferences
  - form_for :preferences, :url => admin_preference_path(@preferences), :html => { :method => :put, :id => 'admin_preferences' } do |f|
    .form_row
      = f.label :app_name, 'Application Name'
      = f.text_field :app_name
    .form_row
      = f.label :domain, 'Email Domain'
      = f.text_field :domain
    .form_row
      = f.label :server_name, 'Server Name'
      = f.text_field :server_name
    .form_row
      = f.label :smtp_server, 'SMTP Server'
      = f.text_field :smtp_server
    .form_row
      = f.label :email_notifications, 'Send Notices', :class => 'checkbox'
      = f.check_box :email_notifications
    %p.meta
      Send email when messages, connection requests, etc., are sent
    .form_row
      = f.label :demo, 'Demo Site', :class => 'checkbox'
      = f.check_box :demo
    %p.meta
      Display a note to explain that this site is just a demonstration
    %br/
    %p
      Register new people in a deactivated state until whitelisted
    .form_row
      %label.checkbox{ :for => "whitelist" }
        Whitelist
      = f.check_box :whitelist
    %br/
    %p Verify email for new registrations using an activation code
    .form_row
      = f.label :email_verifications, 'Verification Emails', :class => 'checkbox'
      = f.check_box :email_verifications
    %p.meta
      Send email to new users containing an activation code
    .form_row
      = f.label :about
      %p = formatting_note
      = fckeditor_textarea("preferences", :about,  :toolbarSet => 'InsoshiBase', :width => '100%',  :height => RICH_TEXT_HEIGHT)
      - # f.text_area :about, :rows => 10
    %br/
    %p.meta
      Keep this short to fit the 146px width
    %br/
    .form_row
      = f.label :analytics
      = f.text_area :analytics, :rows => 10
    %p.meta
      Code will be inserted just before the &lt;/body&gt; tag
    .form_row
      = f.submit "Update", :class => "button"
      = link_to "Cancel", admin_preferences_path
